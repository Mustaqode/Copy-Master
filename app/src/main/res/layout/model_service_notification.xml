<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_50"
    android:padding="4dp">

    <ImageView
        android:id="@+id/uiIvClip"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_paper_clip" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/uiIvClip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/uiTvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_easy_copy_is_active"
            android:textColor="@color/grey_900"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/uiTvCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_never_miss_content"
            android:textColor="@color/grey_900"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>